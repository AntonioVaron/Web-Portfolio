---
interface Props {
	title: string
	description: string
}

const { description, title } = Astro.props
import Header from "../components/Header.astro";
import "../styles/global.css"
import "@fontsource-variable/onest"
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background: #0a0a0a;
		display: flex;
		flex-direction: column;
		min-height: 100vh;		
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}


	.img-mask-right {
		-webkit-mask-image: linear-gradient(to left, rgba(0,0,0,1) 30%, transparent 38%);
  		-webkit-mask-repeat: no-repeat;
  		-webkit-mask-size: cover;
		mask-image: linear-gradient(to left, rgba(0,0,0,1) 30%, rgba(0,0,0,0.05) 38%);
 	 	mask-repeat: no-repeat;
  		mask-size: cover;
	}

	@media (min-width: 768px) {
	.img-mask-right {
			-webkit-mask-image: linear-gradient(to left, rgba(0,0,0,1) 30%, transparent 50%);
			mask-image: linear-gradient(to left, rgba(0,0,0,1) 30%, rgba(0,0,0,0.05) 50%);
		}
	}
	
	.img-mask-bottom {
		-webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 50%, transparent);
  		-webkit-mask-repeat: no-repeat;
  		-webkit-mask-size: cover;
		mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 50%, transparent);
 	 	mask-repeat: no-repeat;
  		mask-size: cover;
	}

	@keyframes infinite-scroll {
		0% {
			transform: translateX(0)
		}
		100% {
			transform: translateX(-100%)
		}
	}

	.animate-infinite-scroll {
		animation: infinite-scroll 20s linear infinite;
	}
</style>