---
export interface Props {
    date: string
    company: string
    title: string
    description: string
}
const { date, company, title, description} = Astro.props
---
<div class="absolute w-3 h-3 bg-gray-700 rounded-full mt-1.5 -start-1.5 border border-white border-gray-900"></div>
<time class="mb-1 text-sm font-normal leading-none text-yellow-100/80">{date}</time>
<h3 class="text-lg font-semibold text-blue-300">{title}</h3>
<h3 class="mb-2 text-sm font-normal leading-none text-blue-100">{company}</h3>
<p class="text-base font-normal text-gray-400">{description}</p>

