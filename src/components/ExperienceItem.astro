---
export interface Props {
    date: string
    company: string
    title: string
    description: string
}
const { date, company, title, description} = Astro.props
---
<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-yellow-100/80">{date}</time>
<h3 class="text-lg font-semibold text-gray-900 dark:text-blue-300">{title}</h3>
<h3 class="mb-2 text-sm font-normal leading-none text-gray-400 dark:text-blue-100">{company}</h3>
<p class="text-base font-normal text-gray-500 dark:text-gray-400">{description}</p>

